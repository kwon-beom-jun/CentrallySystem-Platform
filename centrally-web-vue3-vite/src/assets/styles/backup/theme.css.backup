}

.dm-row__value {
  color: var(--theme-text-primary);
}

/* 연락처 카드 */
.phone-card {
  border: 1px solid var(--theme-border-hover);
  background: var(--theme-primary-lighter);
  box-shadow: 0 2px 10px var(--theme-shadow);
}

.phone-card__left {
  color: var(--theme-icon-primary);
}

.phone-card__number {
  color: var(--theme-text-primary);
}

/* 스타일 선택 버튼 */
.style-btn.active {
  border-color: var(--theme-primary);
  background: var(--theme-primary-light);
  color: var(--theme-primary);
}

/* ═══════════════════════════════════════════════════════════════
 * 공통 UI 요소 (Common UI Elements)
 * ═══════════════════════════════════════════════════════════════ */

/* body 배경 */
body {
  background-color: var(--theme-body-bg) !important;
  color: var(--theme-text-primary) !important;
}

/* 모든 div, section 기본 색상 */
div, section, article, aside, main {
  color: var(--theme-text-primary);
}

/* 제목 요소 */
h1, h2, h3, h4, h5, h6 {
  color: var(--theme-text-primary) !important;
}

/* 링크 */
a {
  color: var(--theme-text-primary);
}

/* 모달 공통 */
.custom-modal-pop-up {
  background-color: var(--theme-modal-overlay) !important;
}

.custom-modal-pop-up-content,
.custom-modal-pop-up-dialog,
.modal-content {
  /* background-color: var(--theme-modal-bg) !important; */
  color: var(--theme-text-primary) !important;
  border-color: var(--theme-modal-border) !important;
}

.custom-modal-pop-up-title {
  color: var(--theme-text-primary) !important;
}

.custom-modal-pop-up-body,
.modal-body,
.modal-footer {
  background-color: var(--theme-modal-bg) !important;
  color: var(--theme-text-secondary) !important; /* 모달 본문은 연한 회색 */
  border-color: var(--theme-modal-border) !important;
}

/* 이미지 확대 모달은 투명 배경 유지 */
.image-zoom-dialog .modal-body {
  background-color: #ffffff00 !important;
}

.modal-body p,
.modal-body span,
.modal-body div,
.custom-modal-pop-up-body p,
.custom-modal-pop-up-body span,
.custom-modal-pop-up-body div {
  color: var(--theme-text-secondary) !important;
}

/* 테이블 공통 */
.table,
#dataTable,
table {
  background-color: var(--theme-table-bg) !important;
  color: var(--theme-text-primary) !important;
}

.table thead th,
#dataTable thead th,
table thead th {
  background-color: var(--theme-table-header-bg) !important;
  border-color: var(--theme-table-border) !important;
  color: var(--theme-text-primary) !important;
}

.table tbody td,
#dataTable tbody td,
table tbody td {
  border-color: var(--theme-table-border) !important;
  background-color: var(--theme-table-bg) !important;
  color: var(--theme-text-primary) !important;
}

/* 짝수 행 배경 */
.table tbody tr:nth-child(even),
#dataTable tbody tr:nth-child(even),
table tbody tr:nth-child(even) {
  background-color: var(--theme-table-row-even) !important;
}

.table tbody tr:nth-child(even) td,
#dataTable tbody tr:nth-child(even) td,
table tbody tr:nth-child(even) td {
  background-color: var(--theme-table-row-even) !important;
  color: var(--theme-text-primary) !important;
}

.table tbody tr:hover,
#dataTable tbody tr:hover td,
table tbody tr:hover td {
  background-color: var(--theme-table-row-hover) !important;
}

/* 테이블 짝수/홀수 행 - 더 강력한 선택자 */
.table tbody tr:nth-child(odd),
.table tbody tr:nth-child(odd) td,
#dataTable tbody tr:nth-child(odd),
#dataTable tbody tr:nth-child(odd) td,
table tbody tr:nth-child(odd),
table tbody tr:nth-child(odd) td,
tbody tr:nth-child(odd),
tbody tr:nth-child(odd) td {
  background-color: var(--theme-table-bg) !important;
  color: var(--theme-text-primary) !important;
}

.table tbody tr:nth-child(even),
.table tbody tr:nth-child(even) td,
#dataTable tbody tr:nth-child(even),
#dataTable tbody tr:nth-child(even) td,
table tbody tr:nth-child(even),
table tbody tr:nth-child(even) td,
tbody tr:nth-child(even),
tbody tr:nth-child(even) td {
  background-color: var(--theme-table-row-even) !important;
  color: var(--theme-text-primary) !important;
}

/* 다크모드 테이블 짝수 행 - 최우선 적용 */
body[data-theme="dark"] .table tbody tr:nth-child(even),
body[data-theme="dark"] .table tbody tr:nth-child(even) td,
body[data-theme="dark"] #dataTable tbody tr:nth-child(even),
body[data-theme="dark"] #dataTable tbody tr:nth-child(even) td,
body[data-theme="dark"] table tbody tr:nth-child(even),
body[data-theme="dark"] table tbody tr:nth-child(even) td,
body[data-theme="dark"] tbody tr:nth-child(even),
body[data-theme="dark"] tbody tr:nth-child(even) td {
  background-color: #131b28 !important;
  color: var(--theme-text-primary) !important;
}

/* placeholder-row, no-data-row */
.placeholder-row,
.no-data-row,
tr.placeholder-row,
tr.no-data-row {
  background-color: var(--theme-table-bg) !important;
}

.placeholder-row td,
.no-data-row td,
tr.placeholder-row td,
tr.no-data-row td {
  background-color: var(--theme-table-bg) !important;
  color: var(--theme-text-muted) !important;
}

/* 다크모드 placeholder-row, no-data-row - 최우선 적용 */
body[data-theme="dark"] .placeholder-row,
body[data-theme="dark"] .no-data-row,
body[data-theme="dark"] tr.placeholder-row,
body[data-theme="dark"] tr.no-data-row,
body[data-theme="dark"] .table tbody .placeholder-row,
body[data-theme="dark"] .table tbody .no-data-row,
body[data-theme="dark"] table tbody .placeholder-row,
body[data-theme="dark"] table tbody .no-data-row {
  background-color: #1e293b !important;
}

body[data-theme="dark"] .placeholder-row td,
body[data-theme="dark"] .no-data-row td,
body[data-theme="dark"] tr.placeholder-row td,
body[data-theme="dark"] tr.no-data-row td,
body[data-theme="dark"] .table tbody .placeholder-row td,
body[data-theme="dark"] .table tbody .no-data-row td,
body[data-theme="dark"] table tbody .placeholder-row td,
body[data-theme="dark"] table tbody .no-data-row td {
  background-color: #1e293b !important;
  color: var(--theme-text-muted) !important;
}

/* 입력 필드 공통 */
input[type="text"],
input[type="email"],
input[type="password"],
input[type="date"],
input[type="number"],
input[type="search"],
select,
textarea,
.form-control {
  background-color: var(--theme-input-bg) !important;
  border-color: var(--theme-input-border) !important;
  color: var(--theme-text-primary) !important;
}

input::placeholder,
textarea::placeholder,
.form-control::placeholder {
  color: var(--theme-input-placeholder) !important;
}

input:focus,
select:focus,
textarea:focus,
.form-control:focus {
  border-color: var(--theme-input-focus-border) !important;
  background-color: var(--theme-input-bg) !important;
  color: var(--theme-text-primary) !important;
}

input:disabled,
select:disabled,
textarea:disabled,
.form-control:disabled {
  background-color: var(--theme-input-disabled-bg) !important;
  color: var(--theme-text-disabled) !important;
}

/* 카드 공통 */
.card {
  background-color: var(--theme-bg-main) !important;
  border-color: var(--theme-border-light) !important;
  color: var(--theme-text-primary) !important;
}

.card-header {
  background-color: var(--theme-bg-secondary) !important;
  border-color: var(--theme-border-light) !important;
  color: var(--theme-text-primary) !important;
}

.card-body {
  background-color: var(--theme-bg-main) !important;
  color: var(--theme-text-primary) !important;
}

/* 사이드바 공통 (FirstSidebar 제외 - 하드코딩된 스타일 유지) */
.second-sidebar {
  background-color: var(--theme-sidebar-bg) !important;
  border-color: var(--theme-sidebar-border) !important;
}

.second-sidebar,
.second-sidebar .category-header,
.second-sidebar .sub-nav-link {
  color: var(--theme-text-primary) !important;
}

/* 카테고리 메뉴 (SecondSidebar 내부만) */
.second-sidebar .category-menu,
.second-sidebar .submenu,
.second-sidebar .dropdown-content {
  background-color: var(--theme-submenu-bg) !important;
  color: var(--theme-text-primary) !important;
}

.second-sidebar .category-item,
.second-sidebar .submenu-item {
  color: var(--theme-text-primary) !important;
}

.second-sidebar .category-item:hover,
.second-sidebar .submenu-item:hover {
  background-color: var(--theme-sidebar-item-hover) !important;
}

/* 서브 메뉴 (SecondSidebar 내부만) */
.second-sidebar .sub-menu {
  background-color: var(--theme-submenu-bg) !important;
  color: var(--theme-text-primary) !important;
}

/* 헤더/네비게이션 */
.navbar,
.header,
nav {
  background-color: var(--theme-header-bg) !important;
  border-color: var(--theme-header-border) !important;
  color: var(--theme-text-primary) !important;
}

/* 콘텐츠 영역 */
.content,
.main-content-area,
.content-wrapper {
  background-color: var(--theme-body-bg) !important;
  color: var(--theme-text-primary) !important;
}

/* 패널, 박스 등 */
.panel,
.box,
.wrapper {
  background-color: var(--theme-bg-main);
  color: var(--theme-text-primary);
}

/* Bootstrap container는 투명 유지 */
.container,
.container-fluid {
  background-color: transparent;
  color: var(--theme-text-primary);
}

/* 라벨 */
label {
  color: var(--theme-text-secondary) !important;
}

/* 리스트 */
ul, ol {
  color: var(--theme-text-primary);
}

li {
  color: var(--theme-text-primary);
}

/* 특정 클래스 오버라이드 */
.white-bg,
.bg-white {
  background-color: var(--theme-bg-main) !important;
}

.gray-bg,
.bg-gray {
  background-color: var(--theme-bg-secondary) !important;
}

/* 폼 그룹 */
.form-group {
  color: var(--theme-text-primary);
}

.form-label {
  color: var(--theme-text-secondary) !important;
}

/* 버튼 텍스트 */
.btn {
  color: inherit;
}

/* 드롭다운 */
.dropdown-menu {
  background-color: var(--theme-bg-main) !important;
  border-color: var(--theme-border-light) !important;
}

.dropdown-item {
  color: var(--theme-text-primary) !important;
}

.dropdown-item:hover {
  background-color: var(--theme-bg-secondary) !important;
}

/* 페이지네이션 */
.pagination {
  background-color: var(--theme-body-bg);
}

.page-link {
  background-color: var(--theme-bg-main) !important;
  border-color: var(--theme-border-light) !important;
  color: var(--theme-text-primary) !important;
}

.page-link:hover {
  background-color: var(--theme-bg-secondary) !important;
}

.page-item.active .page-link {
  background-color: var(--theme-primary) !important;
  border-color: var(--theme-primary) !important;
}

/* 뱃지 */
.badge {
  background-color: var(--theme-chip-bg) !important;
  color: var(--theme-chip-text) !important;
}

/* 알림, 경고 박스 */
.alert {
  background-color: var(--theme-bg-secondary) !important;
  border-color: var(--theme-border-light) !important;
  color: var(--theme-text-primary) !important;
}

/* 구분선 */
hr {
  border-color: var(--theme-border-light) !important;
}

/* 스크롤바 (Firefox) */
* {
  scrollbar-color: var(--theme-text-muted) var(--theme-bg-secondary);
}

/* 스크롤바 (Webkit) */
::-webkit-scrollbar {
  background-color: var(--theme-bg-secondary);
}

::-webkit-scrollbar-thumb {
  background-color: var(--theme-text-muted);
}

::-webkit-scrollbar-thumb:hover {
  background-color: var(--theme-text-secondary);
}

/* ═══════════════════════════════════════════════════════════════
 * 최우선 다크모드 스타일 (최종 오버라이드)
 * ═══════════════════════════════════════════════════════════════ */

/* 다크모드: 테이블 짝수 행 - 최우선 적용 */
body[data-theme="dark"] table tbody tr:nth-child(even),
body[data-theme="dark"] table tbody tr:nth-child(even) > td,
body[data-theme="dark"] .table tbody tr:nth-child(even),
body[data-theme="dark"] .table tbody tr:nth-child(even) > td,
body[data-theme="dark"] #dataTable tbody tr:nth-child(even),
body[data-theme="dark"] #dataTable tbody tr:nth-child(even) > td {
  background-color: #131b28 !important;
  color: #f1f5f9 !important;
}

/* 다크모드: 테이블 빈 데이터 행 - 최우선 적용 */
body[data-theme="dark"] table tbody tr.placeholder-row,
body[data-theme="dark"] table tbody tr.placeholder-row > td,
body[data-theme="dark"] table tbody tr.no-data-row,
body[data-theme="dark"] table tbody tr.no-data-row > td,
body[data-theme="dark"] .table tbody tr.placeholder-row,
body[data-theme="dark"] .table tbody tr.placeholder-row > td,
body[data-theme="dark"] .table tbody tr.no-data-row,
body[data-theme="dark"] .table tbody tr.no-data-row > td,
body[data-theme="dark"] tbody tr.placeholder-row,
body[data-theme="dark"] tbody tr.placeholder-row > td,
body[data-theme="dark"] tbody tr.no-data-row,
body[data-theme="dark"] tbody tr.no-data-row > td {
  background-color: #1e293b !important;
  color: #64748b !important;
}


