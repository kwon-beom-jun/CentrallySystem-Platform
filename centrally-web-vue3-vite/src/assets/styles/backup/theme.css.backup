/* 기본 정보 카드 (bm-card) */
.bm-card {
  background: var(--theme-bg-main);
  border: 1px solid var(--theme-border);
  box-shadow: 0 4px 14px var(--theme-shadow);
}

.bm-card__header {
  background: linear-gradient(135deg, var(--theme-card-header-from) 0%, var(--theme-card-header-to) 100%);
  color: #ffffff;
}

