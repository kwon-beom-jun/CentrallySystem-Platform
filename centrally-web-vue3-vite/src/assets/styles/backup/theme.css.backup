  background: var(--theme-chip-bg);
  color: var(--theme-chip-text);
  border-color: var(--theme-chip-border);
}

/* 데스크탑 카드 (dm-card) */
.dm-card {
  border: 1px solid var(--theme-border);
  background: var(--theme-bg-main);
  box-shadow: 0 4px 14px var(--theme-shadow);
}

